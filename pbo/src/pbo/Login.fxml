<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="pbo.LoginController" stylesheets="@design.css">
    <children>
        <AnchorPane layoutX="400.0" prefHeight="500.0" prefWidth="400.0" styleClass="login-bg">
            <children>
                <FontAwesomeIcon fill="#3a4d39" glyphName="USER" layoutX="162.0" layoutY="180.0" size="8em" />
                <Label layoutX="142.0" layoutY="194.0" text="LOGIN" textFill="#3a4d39">
                    <font>
                        <Font name="Berlin Sans FB" size="40.0" />
                    </font>
                </Label>
                <TextField fx:id="username" layoutX="126.0" layoutY="260.0" promptText="Username" styleClass="textfield-design" />
                <PasswordField fx:id="password" layoutX="127.0" layoutY="324.0" promptText="Password" styleClass="textfield-design" />
                <Button fx:id="login_btn" layoutX="188.0" layoutY="382.0" mnemonicParsing="false" styleClass="button-design" text="LOGIN" />
                <FontAwesomeIcon fill="#3a4d39" glyphName="USER" layoutX="72.0" layoutY="280.0" size="2em" />
                <FontAwesomeIcon fill="#3a4d39" layoutX="72.0" layoutY="343.0" size="2em" />
            </children>
        </AnchorPane>
        <AnchorPane prefHeight="500.0" prefWidth="400.0" styleClass="login-card">
            <children>
                <FontAwesomeIcon fill="#ece3ce" glyphName="HOME" layoutX="144.0" layoutY="214.0" size="10em" />
                <Label fx:id="minimarket" layoutX="102.0" layoutY="240.0" text="Minimarket" textFill="#ece3ce">
                    <font>
                        <Font name="Berlin Sans FB" size="40.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
